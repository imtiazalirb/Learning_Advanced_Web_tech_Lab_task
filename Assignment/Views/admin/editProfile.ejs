<h3 class="display-5 text-center my-4">Personal Information</h3>
	<div class="container">
		<form action="" method="post">

			<div class="form-row">
			  <div class="col-md-8 mb-3">
				<label>Name</label>
				<input type="text" name="name" readonly value="<%=name%>" class="form-control-plaintext" placeholder="" required>
			  </div>
			</div><hr>

			<div class="form-row">
				<div class="col-md-4 mb-3">
				  <label>Email</label>
				  <input type="text" name="email"  value="<%=email%>" class="form-control" placeholder="Email required" required>
				</div>
				<div class="col-md-4 mb-3">
				  <label>Phone</label>
				  <input type="text" name="phone"  value="<%=phone%>" class="form-control" placeholder="Phone required" required>
				</div>
			</div><hr>

			<div class="form-row">
				<div class="col-md-4 mb-3">
				  <label>Username</label>
				  <input type="text" name="username" readonly value="<%=username%>" class="form-control-plaintext" placeholder="" required>
				</div>
				<div class="col-md-4 mb-3">
				  <label>Phone</label>
				  <input type="password" name="password"  value="<%=password%>" class="form-control" placeholder="Password Required" required>
				</div>
			</div><hr>

			<div class="form-group text-center">
                    <input type="submit" name="editProfile" class="btn btn-warning" value="Update Profile" class="form-control">
					<a type="submit" class="btn btn-danger" href="/admin/admin/viewProfile">Cancel</a>
            </div>

		</form>
