<!--Table-->
<h3 class="display-5 text-center my-4">Moderator List</h3>
<div class="container">
	<div id="load">
	<table class="table table-light">
	  <thead>
	    <tr>
          <th scope="col">Id</th>
	      <th scope="col">Name</th>
	      <th scope="col">Username</th>
	      <th scope="col">Email</th>
	      <th scope="col">Phone</th>
          <th>Action</th>
	    </tr>
	  </thead>
	  <% for(var i=0; i<users.length; i++){ %>
	  <tbody>
	    <tr>
	      <td><%= users[i].id%></td>
	      <td><%= users[i].name%></td>
	      <td><%= users[i].username%></td>
		  <td><%= users[i].email%></td>
		  <td><%= users[i].phone%></td>

          <td>
              <a href="/admin/admin/deleteModerator/<%= users[i].id %>" class="btn btn-danger">Delete</a>
		  </td>
	    </tr>
	</tbody>
<% } %>
</table>
